{
  "name": "operaton-dmn-evaluator",
  "description": "WordPress Gravity Forms DMN Evaluator Plugin with E2E and Load Testing",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^6.0.4",
    "@playwright/test": "^1.54.2",
    "axios": "^1.11.0",
    "cypress": "^14.5.3"
  },
  "scripts": {
    "_comment_comprehensive": "=== COMPREHENSIVE TEST SUITE (PRIMARY) ===",
    "test:comprehensive": "bash scripts/run-comprehensive-tests.sh",
    "test:quick": "bash scripts/run-comprehensive-tests.sh --no-integration",
    "test:full": "bash scripts/run-comprehensive-tests.sh --load",
    "test:extreme": "bash scripts/run-comprehensive-tests.sh --load --chaos",

    "_comment_e2e_cypress": "=== CYPRESS TESTING ===",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:live": "cypress run --config baseUrl=https://owc-gemeente.test.open-regels.nl",
    "cypress:dish-form": "cypress run --spec \"tests/e2e/cypress/e2e/dish-form-workflow.cy.js\"",
    "cypress:dish-form:live": "cypress run --spec \"tests/e2e/cypress/e2e/dish-form-workflow.cy.js\" --config baseUrl=https://owc-gemeente.test.open-regels.nl",
    "cypress:dmn-api": "cypress run --spec \"tests/e2e/cypress/e2e/dmn-keyless-api.cy.js\"",
    "cypress:dmn-api:live": "cypress run --spec \"tests/e2e/cypress/e2e/dmn-keyless-api.cy.js\" --config baseUrl=https://owc-gemeente.test.open-regels.nl",
    "cypress:all-specs": "cypress run --spec \"tests/e2e/cypress/e2e/*.cy.js\"",
    "cypress:all-specs:live": "cypress run --spec \"tests/e2e/cypress/e2e/*.cy.js\" --config baseUrl=https://owc-gemeente.test.open-regels.nl",

    "_comment_e2e_playwright": "=== PLAYWRIGHT TESTING ===",
    "playwright:test": "playwright test --config=tests/e2e/playwright/playwright.config.js",
    "playwright:ui": "playwright test --config=tests/e2e/playwright/playwright.config.js --ui",
    "playwright:headed": "playwright test --config=tests/e2e/playwright/playwright.config.js --headed",
    "playwright:debug": "playwright test --config=tests/e2e/playwright/playwright.config.js --debug",
    "playwright:dish-form": "playwright test tests/e2e/playwright/dish-form-workflow.spec.js --config=tests/e2e/playwright/playwright.config.js",
    "playwright:dish-form:ui": "playwright test tests/e2e/playwright/dish-form-workflow.spec.js --config=tests/e2e/playwright/playwright.config.js --ui",
    "playwright:dish-form:headed": "playwright test tests/e2e/playwright/dish-form-workflow.spec.js --config=tests/e2e/playwright/playwright.config.js --headed",
    "playwright:dish-form:debug": "playwright test tests/e2e/playwright/dish-form-workflow.spec.js --config=tests/e2e/playwright/playwright.config.js --debug",
    "playwright:specific-test": "playwright test tests/e2e/playwright/dish-form-workflow.spec.js:30 --config=tests/e2e/playwright/playwright.config.js",

    "_comment_e2e_combined": "=== E2E COMBINED TESTING ===",
    "test:e2e": "npm run cypress:run",
    "test:e2e:live": "npm run cypress:live",
    "test:e2e:playwright": "npm run playwright:test",
    "test:e2e:all": "npm run cypress:run && npm run playwright:test",
    "test:e2e:cross-browser": "npm run playwright:test",
    "test:e2e:dish-form": "npm run cypress:dish-form && npm run playwright:dish-form",
    "test:e2e:dish-form:live": "npm run cypress:dish-form:live && npm run playwright:dish-form",

    "_comment_load": "=== LOAD TESTING (K6) ===",
    "test:load": "k6 run tests/load/dmn-load-test.js",
    "test:load:smoke": "k6 run tests/load/dmn-load-test.js --env TEST_TYPE=health_only",
    "test:load:evaluation": "k6 run tests/load/dmn-load-test.js --env TEST_TYPE=evaluation_only",
    "test:load:report": "k6 run tests/load/dmn-load-test.js --out json=test-results/load-test-results.json",
    "test:load:stress": "k6 run tests/load/dmn-load-test.js --env TEST_TYPE=stress",

    "_comment_chaos": "=== CHAOS ENGINEERING ===",
    "test:chaos": "node tests/chaos/chaos-engineering.js",
    "test:chaos:dev": "node tests/chaos/chaos-engineering.js development",
    "test:chaos:staging": "node tests/chaos/chaos-engineering.js staging",
    "test:chaos:production": "node tests/chaos/chaos-engineering.js production",
    "chaos:baseline": "node -e \"const chaos = require('./tests/chaos/chaos-engineering.js'); const test = new chaos(); test.initialize().then(r => console.log('Baseline:', r));\"",

    "_comment_ci": "=== CI/CD PIPELINE ===",
    "ci": "bash scripts/run-comprehensive-tests.sh",
    "ci:quick": "npm run test:e2e && composer run test:quick",
    "ci:full": "npm run test:full",
    "ci:e2e-only": "npm run test:e2e:all",

    "_comment_workflow": "=== DEVELOPMENT WORKFLOW ===",
    "dev": "npm run test:e2e",
    "check": "npm run test:comprehensive",
    "pre-commit": "npm run test:e2e",
    "pre-release": "npm run test:extreme",

    "_comment_env": "=== ENVIRONMENT-SPECIFIC ===",
    "development": "npm run test:quick",
    "staging": "npm run test:full",
    "production": "npm run test:comprehensive",

    "_comment_utilities": "=== TESTING UTILITIES ===",
    "test:health": "npm run chaos:baseline",
    "test:validate": "npm run test:e2e:all && npm run test:load:smoke",
    "test:reports": "npm run test:load:report && npm run playwright:test",
    "clean:reports": "rm -rf test-results/* playwright-report/* cypress/videos/* cypress/screenshots/*"
  }
}
