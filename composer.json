{
  "name": "operaton/dmn-evaluator",
  "description": "WordPress Gravity Forms DMN Evaluator Plugin with Comprehensive Testing",
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "yoast/phpunit-polyfills": "^1.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "guzzlehttp/guzzle": "^7.9"
  },
  "scripts": {
    "_comment_basic": "=== BASIC TEST COMMANDS (FIXED WITH ENV LOADING) ===",
    "test": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml'",
    "test:unit": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=unit'",
    "test:integration": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=integration'",
    "test:all": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=default --log-junit junit.xml'",
    "_comment_ci": "=== CI/CD PIPELINE COMMANDS (FIXED WITH ENV) ===",
    "test:ci": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=unit --log-junit junit.xml'",
    "test:ci-safe": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=unit --log-junit junit.xml'",
    "ci": "bash -c 'source ./load-env.sh && composer run test:ci && composer run security'",
    "ci:full": "bash -c 'source ./load-env.sh && composer run test:all && composer run quality'",
    "ci:integration": "bash -c 'source ./load-env.sh && composer run test:all && composer run quality'",
    "_comment_comprehensive": "=== COMPREHENSIVE TEST SUITE ===",
    "test:comprehensive": "bash scripts/run-comprehensive-tests.sh",
    "test:quick": "bash scripts/run-comprehensive-tests.sh --no-integration",
    "test:full": "bash scripts/run-comprehensive-tests.sh --load",
    "test:extreme": "bash scripts/run-comprehensive-tests.sh --load --chaos",
    "_comment_specific": "=== SPECIFIC TEST COMPONENTS (FIXED WITH ENV) ===",
    "test:api": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml tests/integration/RestApiIntegrationTest.php'",
    "test:api:verbose": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml tests/integration/RestApiIntegrationTest.php --verbose'",
    "test:mock": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml tests/unit/MockServiceTest.php'",
    "test:performance": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml tests/unit/PerformanceTest.php'",
    "test:security": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml tests/unit/SecurityTest.php'",
    "_comment_debug": "=== DEBUG COMMANDS (FIXED WITH ENV) ===",
    "test:debug": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=unit --verbose'",
    "test:debug:integration": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --testsuite=integration --verbose'",
    "test:list": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --list-tests'",
    "test:info": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --list-tests --testsuite=unit'",
    "test:dry-run": "bash -c 'source ./load-env.sh && phpunit --configuration tests/phpunit.xml --dry-run --testsuite=unit'",
    "_comment_mock": "=== MOCK SERVICE UTILITIES ===",
    "mock:demo": "php -r \"require_once 'tests/fixtures/ExtendedMockDmnService.php'; require_once 'tests/helpers/MockServiceTestHelper.php'; use Operaton\\DMN\\Tests\\Helpers\\MockServiceTestHelper; \\$helper = new MockServiceTestHelper(); \\$report = \\$helper->generateTestReport(); echo json_encode(\\$report, JSON_PRETTY_PRINT);\"",
    "mock:test": "composer run test:mock",
    "_comment_quality": "=== CODE QUALITY & LINTING ===",
    "lint": "vendor/bin/phpcs --standard=PSR12 includes/ operaton-dmn-plugin.php",
    "lint:fix": "vendor/bin/phpcbf --standard=PSR12 includes/ operaton-dmn-plugin.php || echo 'Auto-fixed what was possible'",
    "lint:summary": "vendor/bin/phpcs --standard=PSR12 --report=summary includes/ operaton-dmn-plugin.php || true",
    "lint:detailed": "vendor/bin/phpcs --standard=PSR12 includes/ operaton-dmn-plugin.php || true",
    "format": "composer run lint:fix && composer run lint:summary",
    "_comment_security": "=== SECURITY & AUDITING ===",
    "security": "composer audit",
    "audit": "composer audit",
    "quality": "composer run lint:summary && composer run security",
    "quality:strict": "composer run lint && composer run security",
    "_comment_hooks": "=== PRE-COMMIT HOOKS MANAGEMENT ===",
    "hooks:enable": "bash scripts/hooks/manage-hooks.sh enable",
    "hooks:disable": "bash scripts/hooks/manage-hooks.sh disable",
    "hooks:status": "bash scripts/hooks/manage-hooks.sh status",
    "hooks:test": "bash scripts/hooks/manage-hooks.sh test",
    "hooks:setup": "bash scripts/hooks/setup-precommit-hooks.sh",
    "_comment_workflow": "=== DEVELOPMENT WORKFLOW ALIASES ===",
    "dev": "composer run test:quick",
    "check": "composer run test:comprehensive && composer run quality",
    "pre-commit": "composer run test:quick && composer run lint:summary",
    "pre-release": "composer run test:full && composer run quality:strict",
    "_comment_env": "=== ENVIRONMENT-SPECIFIC COMMANDS (ENHANCED) ===",
    "env:show": "bash -c 'source ./load-env.sh && echo \"Environment loaded successfully\"'",
    "env:test": "bash -c 'source ./load-env.sh && echo \"DMN_ENGINE_URL: $DMN_ENGINE_URL\" && echo \"DMN_TEST_URL: $DMN_TEST_URL\"'",
    "development": "bash -c 'source ./load-env.sh && composer run test:quick'",
    "staging": "bash -c 'source ./load-env.sh && composer run test:full'",
    "production": "bash -c 'source ./load-env.sh && composer run test:comprehensive'"
  },
  "autoload-dev": {
    "psr-4": {
      "Operaton\\DMN\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
